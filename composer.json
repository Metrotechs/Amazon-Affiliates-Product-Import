{
    "name": "amazon-affiliate-importer/wordpress-plugin",
    "description": "WordPress plugin to import Amazon products to WooCommerce with affiliate links",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "woocommerce",
        "amazon",
        "affiliate",
        "product-import",
        "scraper"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AmazonAffiliateImporter\\": "includes/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress .",
        "phpcbf": "phpcbf --standard=WordPress ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
